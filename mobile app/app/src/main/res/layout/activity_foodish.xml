<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foodish_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FoodishActivity">

    <!-- ImageView to display random food image -->
    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="0dp"
        android:layout_height="600dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Random food image" />

    <!-- Button to trigger random image loading -->
    <Button
        android:id="@+id/loadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Random Food Image"
        app:layout_constraintTop_toBottomOf="@id/foodImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
