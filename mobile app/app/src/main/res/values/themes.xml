<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HolaWear" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Set the status bar color to black -->
        <item name="android:statusBarColor">@android:color/black</item>

        <!-- Ensure status bar icons are light for visibility on dark background -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.HolaWear" parent="Base.Theme.HolaWear" />

    <!-- Custom style for SearchView -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:editTextBackground">@android:color/transparent</item>
    </style>
</resources>
